FROM ghcr.io/invoke-ai/invokeai:latest

# Set working directory
WORKDIR /invokeai

# Create models directory for stable diffusion models
RUN mkdir -p /invokeai/models/stable-diffusion

# Expose the default InvokeAI port
EXPOSE 9090

# Default command to start InvokeAI web interface
CMD ["invokeai-web", "--host", "0.0.0.0", "--port", "9090"]